<form method="get" action="/quizes">        
  <input class="btn" type="text" name="search"/>
  <input class="btn" type="submit" value="Buscar"/>
</form>

<table>
	<% var i; for (i=0; i < quizes.length; i++) { %>        
    	<tr>
	 		<td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
	 		<% if(session.user){ %>
	 		<td><a href="quizes/<%= quizes[i].id %>/edit"><button class="button">editar</button></a></td>
	 		<td>
	 		<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
	 			<button class="button" type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">borrar</button>
	 		</form>
	 		</td>
	 		<% } %>
		</tr>
  	<% } %>
</table>
<% if(session.user){ %>
<p><a href="/quizes/new"><button class="btn" type="button">Crear pregunta</button></a></p>
<% } %>